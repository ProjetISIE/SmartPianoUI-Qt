compilation_database_dir: build
output_directory: diagrams
query_driver: "clang++"
diagrams:
  SmartPianoClasses:
    type: class
    glob:
      - include/*.h
      - src/*.cpp
    include:
      paths:
        - include
        - src
    exclude:
      namespaces:
        - std
      elements:
        - r: "^Q.*"
    group_methods: false
    plantuml:
      before:
        - "skinparam classAttributeIconSize 0"
        - "skinparam dpi 200"
